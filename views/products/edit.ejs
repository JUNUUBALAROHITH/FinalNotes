  <link rel="stylesheet" href="/stylesheets/style.css" />
  <link rel="stylesheet" href="/stylesheets/index.css" />
</head>

<body>
    


    <h1 style="text-align: center;">Update Note</h1>
    <form action="/products/<%=product._id%>?_method=PUT" method="POST">
        <div class="form-group">
        <label for="title" >Product title</label>
        <input type="text" class="form-control" name="title" id="title" placeholder="product title" value="<%=product.title%>">
    </div>
    <div class="form-group">
        <label for="description" >description</label>
        <!-- <textarea type="text" id="myTextArea" name="description" placeholder="description" class="form-control" rows="5" ></textarea> -->
        <input type="text" class="form-control form-control-lg" id="description" name="description" placeholder="description" value = "<%= product.description %>">
    </div>
        <button  class="btn btn-success">Submit</button>
    </form>
    

    <a href="/products/<%=product._id%>">Cancel</a>

    

    <script src="/javascripts/main.js"></script>

</body>

</html>